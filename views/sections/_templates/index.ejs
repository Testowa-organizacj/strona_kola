<section class="hero-section text-center">
    <div class="container">
        <h1 class="display-4"><%= title %></h1>
        <p class="lead"><%= description %></p>
    </div>
</section>

<main class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <% content.forEach(section => { %>
                <h2><%= section.title %></h2>
                <p><%= section.text %></p>
            <% }); %>
        </div>
    </div>
</main>